<div class = "template-select-main">
  <div class="title-content">
  テンプレートを選択してください
  </div>
  <%= form_with  model: @order,url: '/orders/new/:id', class: 'all-template', local: true do |f| %>
    <ul class='template-lists'>
      <% @templates.each do |template| %>
        <li class='list'>
          <div class="template-img-content">
            <%=  image_tag template.template_image, class: "template-image" %>
          </div>
          <div class = "template-details">
            <%= f.submit  "注文へ" ,class:"continue-order-click" %>
          </div>
        </li>
      <% end %>
    </ul>
  <% end %>

</div>